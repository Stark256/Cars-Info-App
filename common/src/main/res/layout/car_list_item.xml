<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="carListItem"
            type="com.cars.info.common.models.CarListItemUI" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/car_list_item_image"
            android:layout_width="132dp"
            android:layout_height="96dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            imageUrl="@{carListItem.imageUrl}"
            />

        <TextView
            android:id="@+id/car_list_item_make_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/car_list_item_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="2"
            android:text="@{carListItem.name}"
            tools:text="BMW 3 Series 2022" />

        <TextView
            android:id="@+id/car_list_item_short_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/car_list_item_make_model"
            app:layout_constraintEnd_toEndOf="@+id/car_list_item_make_model"
            app:layout_constraintStart_toStartOf="@+id/car_list_item_make_model"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{carListItem.shortDescription}"
            tools:text="Truck • 310 hp • (0-60 mph) - 8.5s" />

        <LinearLayout
            android:id="@+id/car_list_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/car_list_item_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/car_list_item_short_description"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp">

            <include
                android:id="@+id/car_list_item_engine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                layout="@layout/image_text_item"
                bind:imageTextUI="@{carListItem.engineDesc}"
                />

            <include
                android:id="@+id/car_list_item_transmission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                layout="@layout/image_text_item"
                bind:imageTextUI="@{carListItem.transmissionDesc}"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/car_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/car_list_item_image"
            app:layout_constraintTop_toBottomOf="@+id/car_list_item_description"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:text="@{carListItem.price}"
            tools:text="27,500 $"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>