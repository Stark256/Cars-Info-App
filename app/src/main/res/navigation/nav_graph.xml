<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/nav_splash">

    <fragment
        android:id="@+id/nav_splash"
        android:name="com.cars.info.splash.SplashFragment"
        tools:layout="@layout/fragment_splash"/>

    <action
        android:id="@+id/action_to_auth"
        app:popUpTo="@+id/nav_graph"
        app:popUpToInclusive="true"
        app:destination="@id/auth_nav" />

    <include app:graph="@navigation/auth_nav"/>
    <include app:graph="@navigation/search_nav"/>
    <include app:graph="@navigation/favourites_nav"/>
    <include app:graph="@navigation/account_nav"/>
</navigation>